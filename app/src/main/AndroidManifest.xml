<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adolphchris.android.musicpayerapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".list_template" />
        <activity
            android:name=".SongsActivity"
            android:label="Songs"
            android:theme="@style/songTheme" />
        <activity android:name=".ArtistActivity"
            android:label="Artists"/>
        <activity android:name=".GenreActivity"
            android:label="Genres"/>
        <activity android:name=".AlbumActivity"
            android:label="Albums"/>
        <activity android:name=".CreatePlaylistActivity"
            android:label="Create Playlist"/>
        <activity android:name=".NowPlayingActivity"
            android:label="Now Playing"/>
    </application>

</manifest>